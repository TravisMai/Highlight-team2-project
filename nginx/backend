server {
    listen [::]:80;
    listen 80;
    server_name api.highlight-io.top;
    return 301 https://$host$request_uri;
}

server {
    listen 443 default_server ssl http2;
    listen [::]:443 ssl http2;
    server_name api.highlight-io.top www.api.highlight-io.top;

    ssl_certificate /etc/letsencrypt/live/api.highlight-io.top/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.highlight-io.top/privkey.pem;

    location / {
            proxy_pass http://localhost:3000;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection 'upgrade';
            proxy_set_header Host $host;
            proxy_cache_bypass $http_upgrade;
        }

    location /socket.io/ {
        proxy_pass http://localhost:3001;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
    }

    location ~ /.well-known/acme-challenge {
        allow all;
        root /var/www/html;
    }
}
